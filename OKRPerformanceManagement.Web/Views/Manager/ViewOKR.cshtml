@{
    ViewData["Title"] = "View OKR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">View OKR</h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (ViewBag.Employee != null)
    {
        var employee = ViewBag.Employee as OKRPerformanceManagement.Models.Employee;
        var okr = ViewBag.OKR as OKRPerformanceManagement.Models.PerformanceReview;

        <div class="row">
            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Employee Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-user fa-3x text-gray-300"></i>
                            </div>
                            <h4 class="font-weight-bold">@employee.FirstName @employee.LastName</h4>
                            <p class="text-muted">@employee.Position</p>
                            <p class="text-muted">@employee.Role</p>
                            <p class="text-muted">@employee.Email</p>
                        </div>
                    </div>
                </div>

                @if (okr != null)
                {
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Review Information</h6>
                        </div>
                        <div class="card-body">
                            <p><strong>Review Period:</strong><br>
                            @okr.ReviewPeriodStart.ToString("MMM dd, yyyy") - @okr.ReviewPeriodEnd.ToString("MMM dd, yyyy")</p>
                            
                            <p><strong>Status:</strong><br>
                            <span class="badge badge-@(okr.Status == "Draft" ? "secondary" : okr.Status == "Employee_Review" ? "warning" : okr.Status == "Manager_Review" ? "info" : "success")">
                                @okr.Status
                            </span></p>
                            
                            <p><strong>Created:</strong><br>
                            @okr.CreatedDate.ToString("MMM dd, yyyy")</p>
                            
                            @if (okr.SubmittedDate.HasValue)
                            {
                                <p><strong>Submitted:</strong><br>
                                @okr.SubmittedDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                            
                            @if (okr.OverallRating.HasValue)
                            {
                                <p><strong>Overall Rating:</strong><br>
                                <span class="badge badge-success">@okr.OverallRating.Value.ToString("F1")</span></p>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-8">
                @if (okr != null)
                {
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Performance Review Details</h6>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(okr.EmployeeSelfAssessment))
                            {
                                <div class="mb-4">
                                    <h6 class="font-weight-bold">Employee Self Assessment:</h6>
                                    <p class="text-muted">@okr.EmployeeSelfAssessment</p>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(okr.ManagerAssessment))
                            {
                                <div class="mb-4">
                                    <h6 class="font-weight-bold">Manager Assessment:</h6>
                                    <p class="text-muted">@okr.ManagerAssessment</p>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(okr.FinalAssessment))
                            {
                                <div class="mb-4">
                                    <h6 class="font-weight-bold">Final Assessment:</h6>
                                    <p class="text-muted">@okr.FinalAssessment</p>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(okr.DiscussionNotes))
                            {
                                <div class="mb-4">
                                    <h6 class="font-weight-bold">Discussion Notes:</h6>
                                    <p class="text-muted">@okr.DiscussionNotes</p>
                                </div>
                            }

                            @if (okr.Objectives != null && okr.Objectives.Any())
                            {
                                <h6 class="font-weight-bold mb-3">Objectives and Key Results:</h6>
                                <div class="accordion" id="okrAccordion">
                                    @foreach (var objective in okr.Objectives.OrderBy(o => o.SortOrder))
                                    {
                                        <div class="card">
                                            <div class="card-header" id="heading@(objective.Id)">
                                                <h2 class="mb-0">
                                                    <button class="btn btn-link btn-block text-left" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(objective.Id)" aria-expanded="true" aria-controls="collapse@(objective.Id)">
                                                        <strong>@objective.Name</strong>
                                                        <span class="badge badge-primary float-right">@objective.Weight%</span>
                                                    </button>
                                                </h2>
                                            </div>

                                            <div id="collapse@(objective.Id)" class="collapse" aria-labelledby="heading@(objective.Id)" data-bs-parent="#okrAccordion">
                                                <div class="card-body">
                                                    @if (!string.IsNullOrEmpty(objective.Description))
                                                    {
                                                        <p class="text-muted mb-3">@objective.Description</p>
                                                    }
                                                    
                                                    @if (objective.KeyResults != null && objective.KeyResults.Any())
                                                    {
                                                        <div class="table-responsive">
                                                            <table class="table table-sm table-bordered">
                                                                <thead class="thead-light">
                                                                    <tr>
                                                                        <th>Key Result</th>
                                                                        <th>Target</th>
                                                                        <th>Measure</th>
                                                                        <th>Employee Rating</th>
                                                                        <th>Manager Rating</th>
                                                                        <th>Final Rating</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var keyResult in objective.KeyResults.OrderBy(kr => kr.SortOrder))
                                                                    {
                                                                        <tr>
                                                                            <td>
                                                                                <strong>@keyResult.Name</strong>
                                                                                <br><small class="text-muted">Weight: @keyResult.Weight%</small>
                                                                            </td>
                                                                            <td>@keyResult.Target</td>
                                                                            <td>@keyResult.Measure</td>
                                                                            <td>
                                                                                @if (keyResult.EmployeeRating.HasValue)
                                                                                {
                                                                                    <span class="badge badge-info">@keyResult.EmployeeRating</span>
                                                                                    @if (!string.IsNullOrEmpty(keyResult.EmployeeComments))
                                                                                    {
                                                                                        <br><small class="text-muted">@keyResult.EmployeeComments</small>
                                                                                    }
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span class="text-muted">Not rated</span>
                                                                                }
                                                                            </td>
                                                                            <td>
                                                                                @if (keyResult.ManagerRating.HasValue)
                                                                                {
                                                                                    <span class="badge badge-warning">@keyResult.ManagerRating</span>
                                                                                    @if (!string.IsNullOrEmpty(keyResult.ManagerComments))
                                                                                    {
                                                                                        <br><small class="text-muted">@keyResult.ManagerComments</small>
                                                                                    }
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span class="text-muted">Not rated</span>
                                                                                }
                                                                            </td>
                                                                            <td>
                                                                                @if (keyResult.FinalRating.HasValue)
                                                                                {
                                                                                    <span class="badge badge-success">@keyResult.FinalRating</span>
                                                                                    @if (!string.IsNullOrEmpty(keyResult.FinalComments))
                                                                                    {
                                                                                        <br><small class="text-muted">@keyResult.FinalComments</small>
                                                                                    }
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span class="text-muted">Not finalized</span>
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }

                            <div class="mt-4">
                                <a href="@Url.Action("ReviewEmployee", new { id = employee.Id })" class="btn btn-primary">
                                    <i class="fas fa-user"></i> Review Employee
                                </a>
                                @if (okr.Status == "Employee_Review")
                                {
                                    <a href="@Url.Action("ReviewDetails", new { id = okr.Id })" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Review & Rate
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">No OKR Found</h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                No performance review found for this employee.
                            </div>
                            <a href="@Url.Action("CreateTemplateReview")" class="btn btn-success">
                                <i class="fas fa-plus"></i> Create Review
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            Employee not found.
        </div>
    }
</div>
