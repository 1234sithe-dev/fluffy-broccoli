@{
    ViewData["Title"] = "Manager Performance History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Manager Performance History</h1>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-tachometer-alt"></i> Manager Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (ViewBag.CurrentManager != null)
    {
        var currentManager = ViewBag.CurrentManager as OKRPerformanceManagement.Models.Employee;
        var completedReviews = ViewBag.CompletedReviews as List<OKRPerformanceManagement.Models.PerformanceReview>;
        var teamMembers = ViewBag.TeamMembers as List<OKRPerformanceManagement.Models.Employee>;

        <div class="row">
            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Manager Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-user-tie fa-3x text-gray-300"></i>
                            </div>
                            <h4 class="font-weight-bold">@currentManager.FirstName @currentManager.LastName</h4>
                            <p class="text-muted">@currentManager.Position</p>
                            <p class="text-muted">@currentManager.Role</p>
                            <p class="text-muted">@currentManager.Email</p>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Team Summary</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="h4 font-weight-bold text-primary">@(teamMembers?.Count ?? 0)</div>
                                <div class="text-muted">Team Members</div>
                            </div>
                            <div class="col-6">
                                <div class="h4 font-weight-bold text-success">@(completedReviews?.Count ?? 0)</div>
                                <div class="text-muted">Reviews Completed</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Team Performance</h6>
                    </div>
                    <div class="card-body">
                        @if (completedReviews?.Any() == true)
                        {
                            <div class="text-center">
                                <div class="h4 font-weight-bold text-primary">
                                    @completedReviews.Average(r => r.OverallRating ?? 0).ToString("F1")
                                </div>
                                <div class="text-muted">Average Team Rating</div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted">
                                <i class="fas fa-info-circle"></i>
                                <br>No completed reviews yet
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Completed Team Reviews</h6>
                    </div>
                    <div class="card-body">
                        @if (completedReviews != null && completedReviews.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Employee</th>
                                            <th>Review Period</th>
                                            <th>Template</th>
                                            <th>Overall Rating</th>
                                            <th>Completed Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var review in completedReviews)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@review.Employee.FirstName @review.Employee.LastName</strong><br>
                                                    <small class="text-muted">@review.Employee.Position</small>
                                                </td>
                                                <td>
                                                    <strong>@review.ReviewPeriodStart.ToString("MMM dd, yyyy")</strong><br>
                                                    <small class="text-muted">to @review.ReviewPeriodEnd.ToString("MMM dd, yyyy")</small>
                                                </td>
                                                <td>
                                                    @if (review.OKRTemplate != null)
                                                    {
                                                        <text>@review.OKRTemplate.Name</text>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (review.OverallRating.HasValue)
                                                    {
                                                        <span class="badge badge-@(review.OverallRating >= 4 ? "success" : review.OverallRating >= 3 ? "warning" : "danger")">
                                                            @review.OverallRating.Value.ToString("F1")
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (review.FinalizedDate.HasValue)
                                                    {
                                                        <text>@review.FinalizedDate.Value.ToString("MMM dd, yyyy")</text>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("ViewOKR", "Manager", new { id = review.Id })" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-eye"></i> View Details
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                No completed team reviews found. Completed reviews will appear here once they are finalized.
                            </div>
                        }
                    </div>
                </div>

                @if (teamMembers != null && teamMembers.Any())
                {
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Team Members</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var member in teamMembers)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="card border-left-primary">
                                            <div class="card-body">
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col mr-2">
                                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                            @member.FirstName @member.LastName
                                                        </div>
                                                        <div class="h6 mb-0 font-weight-bold text-gray-800">
                                                            @member.Position
                                                        </div>
                                                        <div class="text-xs text-muted">
                                                            @member.Email
                                                        </div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <i class="fas fa-user fa-2x text-gray-300"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            Manager record not found.
        </div>
    }
</div>
