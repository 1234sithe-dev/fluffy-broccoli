@model OKRPerformanceManagement.Models.PerformanceReview

@{
    ViewData["Title"] = "Edit OKR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Edit OKR</h1>
                <div>
                    <a href="@Url.Action("ViewOKR", new { id = Model?.Id })" class="btn btn-secondary">
                        <i class="fas fa-eye"></i> View OKR
                    </a>
                    <a href="@Url.Action("MyOKRs")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to My OKRs
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <!-- OKR Header Information -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">OKR Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>OKR Review #@Model.Id</h5>
                                <p class="text-muted">Performance Review for @(Model.Employee?.FirstName ?? "Unknown") @(Model.Employee?.LastName ?? "Employee")</p>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Status:</strong>
                                        @switch (Model.Status)
                                        {
                                            case "Draft":
                                                <span class="badge badge-secondary">Draft</span>
                                                break;
                                            case "Employee_Review":
                                                <span class="badge badge-warning">Employee Review</span>
                                                break;
                                            default:
                                                <span class="badge badge-secondary">@(Model.Status ?? "Unknown")</span>
                                                break;
                                        }
                                    </div>
                                    <div class="col-6">
                                        <strong>Period:</strong>
                                        <span>@(Model.ReviewPeriodStart.ToString("MMM dd") ?? "N/A") - @(Model.ReviewPeriodEnd.ToString("MMM dd, yyyy") ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Form -->
        <form asp-action="EditOKR" method="post">
            <input type="hidden" asp-for="Id" />
            
            <!-- Objectives and Key Results -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Objectives and Key Results</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.Objectives != null && Model.Objectives.Any())
                            {
                                var objectivesList = Model.Objectives.ToList();
                                for (int i = 0; i < objectivesList.Count; i++)
                                {
                                    var objective = objectivesList[i];
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <div class="row align-items-center">
                                                <div class="col-md-8">
                                                    <h6 class="mb-0">@objective.Name</h6>
                                                    @if (!string.IsNullOrEmpty(objective.Description))
                                                    {
                                                        <small class="text-muted">@objective.Description</small>
                                                    }
                                                </div>
                                                <div class="col-md-4 text-right">
                                                    <span class="badge badge-primary">Weight: @objective.Weight%</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            @if (objective.KeyResults != null && objective.KeyResults.Any())
                                            {
                                                var keyResultsList = objective.KeyResults.ToList();
                                                <div class="table-responsive">
                                                    <table class="table table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Key Result</th>
                                                                <th>Target</th>
                                                                <th>Employee Comments</th>
                                                                <th>Employee Rating</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @for (int j = 0; j < keyResultsList.Count; j++)
                                                            {
                                                                var kr = keyResultsList[j];
                                                                <tr>
                                                                    <td>
                                                                        <strong>@kr.Name</strong>
                                                                        @if (!string.IsNullOrEmpty(kr.Objectives))
                                                                        {
                                                                            <br>
                                                                            <small class="text-muted">@kr.Objectives</small>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (!string.IsNullOrEmpty(kr.Target))
                                                                        {
                                                                            <span>@kr.Target</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-muted">Not set</span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        <input type="hidden" name="KeyResults[@j].Id" value="@kr.Id" />
                                                                        <textarea name="KeyResults[@j].EmployeeComments" class="form-control form-control-sm" rows="2" placeholder="Add your comments...">@kr.EmployeeComments</textarea>
                                                                    </td>
                                                                    <td>
                                                                        <select name="KeyResults[@j].EmployeeRating" class="form-control form-control-sm">
                                                                            <option value="">Not Rated</option>
                                                                            @{
                                                                                var rating1Selected = kr.EmployeeRating == 1 ? "selected" : "";
                                                                                var rating2Selected = kr.EmployeeRating == 2 ? "selected" : "";
                                                                                var rating3Selected = kr.EmployeeRating == 3 ? "selected" : "";
                                                                                var rating4Selected = kr.EmployeeRating == 4 ? "selected" : "";
                                                                                var rating5Selected = kr.EmployeeRating == 5 ? "selected" : "";
                                                                            }
                                                                            <option value="1" selected="@rating1Selected">1 - Needs Improvement</option>
                                                                            <option value="2" selected="@rating2Selected">2 - Below Expectations</option>
                                                                            <option value="3" selected="@rating3Selected">3 - Meets Expectations</option>
                                                                            <option value="4" selected="@rating4Selected">4 - Exceeds Expectations</option>
                                                                            <option value="5" selected="@rating5Selected">5 - Outstanding</option>
                                                                        </select>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No key results defined for this objective.</p>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-exclamation-circle fa-2x text-gray-300 mb-3"></i>
                                    <h5 class="text-gray-600">No Objectives Found</h5>
                                    <p class="text-muted">This OKR doesn't have any objectives defined yet.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Self Assessment Section -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Employee Self Assessment</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="EmployeeSelfAssessment">Self Assessment</label>
                                <textarea asp-for="EmployeeSelfAssessment" class="form-control" rows="5" placeholder="Provide your self-assessment of your performance during this period..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <button type="submit" name="action" value="save" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                    <button type="submit" name="action" value="submit" class="btn btn-success">
                                        <i class="fas fa-paper-plane"></i> Submit for Review
                                    </button>
                                </div>
                                <div>
                                    <a href="@Url.Action("ViewOKR", new { id = Model.Id })" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h5 class="text-gray-600">OKR Not Found</h5>
                        <p class="text-muted">The requested OKR could not be found or loaded.</p>
                        <a href="@Url.Action("MyOKRs")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Back to My OKRs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any client-side validation or enhancements here
            $('form').on('submit', function(e) {
                var action = $('button[type="submit"]:focus').val();
                if (action === 'submit') {
                    if (!confirm('Are you sure you want to submit this OKR for review? You will not be able to edit it after submission.')) {
                        e.preventDefault();
                    }
                }
            });
        });
    </script>
}
