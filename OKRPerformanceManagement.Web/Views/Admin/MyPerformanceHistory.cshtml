@{
    ViewData["Title"] = "Admin Performance History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Admin Performance History</h1>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-tachometer-alt"></i> Admin Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (ViewBag.AllEmployees != null)
    {
        var allEmployees = ViewBag.AllEmployees as List<OKRPerformanceManagement.Models.Employee>;
        var allCompletedReviews = ViewBag.AllCompletedReviews as List<OKRPerformanceManagement.Models.PerformanceReview>;
        var performanceStats = ViewBag.PerformanceStats as Dictionary<string, object>;

        <div class="row">
            <div class="col-lg-3">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Organization Overview</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-building fa-3x text-gray-300"></i>
                            </div>
                            <h4 class="font-weight-bold">@(allEmployees?.Count ?? 0)</h4>
                            <p class="text-muted">Total Employees</p>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Performance Reviews</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-12 mb-3">
                                <div class="h4 font-weight-bold text-success">@(allCompletedReviews?.Count ?? 0)</div>
                                <div class="text-muted">Completed Reviews</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Average Rating</h6>
                    </div>
                    <div class="card-body">
                        @if (allCompletedReviews?.Any() == true)
                        {
                            <div class="text-center">
                                <div class="h4 font-weight-bold text-primary">
                                    @allCompletedReviews.Average(r => r.OverallRating ?? 0).ToString("F1")
                                </div>
                                <div class="text-muted">Organization Average</div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted">
                                <i class="fas fa-info-circle"></i>
                                <br>No completed reviews yet
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">All Completed Performance Reviews</h6>
                    </div>
                    <div class="card-body">
                        @if (allCompletedReviews != null && allCompletedReviews.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Employee</th>
                                            <th>Manager</th>
                                            <th>Review Period</th>
                                            <th>Template</th>
                                            <th>Overall Rating</th>
                                            <th>Completed Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var review in allCompletedReviews)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@review.Employee.FirstName @review.Employee.LastName</strong><br>
                                                    <small class="text-muted">@review.Employee.Position</small>
                                                </td>
                                                <td>
                                                    @if (review.Manager != null)
                                                    {
                                                        <text>@review.Manager.FirstName @review.Manager.LastName</text>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    <strong>@review.ReviewPeriodStart.ToString("MMM dd, yyyy")</strong><br>
                                                    <small class="text-muted">to @review.ReviewPeriodEnd.ToString("MMM dd, yyyy")</small>
                                                </td>
                                                <td>
                                                    @if (review.OKRTemplate != null)
                                                    {
                                                        <text>@review.OKRTemplate.Name</text>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (review.OverallRating.HasValue)
                                                    {
                                                        <span class="badge badge-@(review.OverallRating >= 4 ? "success" : review.OverallRating >= 3 ? "warning" : "danger")">
                                                            @review.OverallRating.Value.ToString("F1")
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (review.FinalizedDate.HasValue)
                                                    {
                                                        <text>@review.FinalizedDate.Value.ToString("MMM dd, yyyy")</text>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("ViewOKR", "Admin", new { id = review.Id })" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-eye"></i> View Details
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                No completed performance reviews found in the organization.
                            </div>
                        }
                    </div>
                </div>

                @if (allCompletedReviews?.Any() == true)
                {
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Performance Analytics</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Rating Distribution</h6>
                                    <div class="progress mb-2">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @((allCompletedReviews.Count(r => r.OverallRating >= 4) * 100.0 / allCompletedReviews.Count).ToString("F0"))%">
                                            Excellent (4-5): @allCompletedReviews.Count(r => r.OverallRating >= 4)
                                        </div>
                                    </div>
                                    <div class="progress mb-2">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: @((allCompletedReviews.Count(r => r.OverallRating >= 3 && r.OverallRating < 4) * 100.0 / allCompletedReviews.Count).ToString("F0"))%">
                                            Good (3-4): @allCompletedReviews.Count(r => r.OverallRating >= 3 && r.OverallRating < 4)
                                        </div>
                                    </div>
                                    <div class="progress mb-2">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: @((allCompletedReviews.Count(r => r.OverallRating < 3) * 100.0 / allCompletedReviews.Count).ToString("F0"))%">
                                            Needs Improvement (&lt;3): @allCompletedReviews.Count(r => r.OverallRating < 3)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h6>Top Performers</h6>
                                    @{
                                        var topPerformers = allCompletedReviews
                                            .Where(r => r.OverallRating.HasValue)
                                            .OrderByDescending(r => r.OverallRating)
                                            .Take(5)
                                            .ToList();
                                    }
                                    @if (topPerformers.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var performer in topPerformers)
                                            {
                                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <strong>@performer.Employee.FirstName @performer.Employee.LastName</strong><br>
                                                        <small class="text-muted">@performer.Employee.Position</small>
                                                    </div>
                                                    <span class="badge badge-success badge-pill">
                                                        @performer.OverallRating.Value.ToString("F1")
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted">
                                            <i class="fas fa-info-circle"></i>
                                            <br>No performance data available
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            Unable to load organization data.
        </div>
    }
</div>
